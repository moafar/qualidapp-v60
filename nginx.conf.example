# Configuración de nginx para QualidApp v60
# Copiar a: /etc/nginx/sites-available/qualidapp
# Habilitar con: sudo ln -s /etc/nginx/sites-available/qualidapp /etc/nginx/sites-enabled/

server {
    listen 80;
    listen [::]:80;
    
    # CAMBIAR: Reemplazar con tu dominio o dirección IP
    server_name tu-dominio.com www.tu-dominio.com;
    
    # Ruta raíz de la aplicación
    root /var/www/qualidapp-v60;
    index index.html;
    
    # Logs
    access_log /var/log/nginx/qualidapp-access.log;
    error_log /var/log/nginx/qualidapp-error.log;
    
    # Configuración principal
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Caché agresivo para archivos estáticos
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Content-Type correcto para módulos JavaScript ES
    location ~* \.js$ {
        add_header Content-Type "application/javascript; charset=utf-8";
    }
    
    # Content-Type correcto para archivos YAML
    location ~* \.(yaml|yml)$ {
        add_header Content-Type "text/yaml; charset=utf-8";
    }
    
    # Content-Type correcto para archivos CSV
    location ~* \.csv$ {
        add_header Content-Type "text/csv; charset=utf-8";
    }
    
    # Deshabilitar listado de directorios
    autoindex off;
    
    # Cabeceras de seguridad
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    # Limitar tamaño de archivos subidos (aunque esta app no sube al servidor)
    client_max_body_size 50M;
    
    # Compresión gzip
    gzip on;
    gzip_vary on;
    gzip_min_length 256;
    gzip_types
        text/plain
        text/css
        text/javascript
        application/javascript
        application/json
        application/x-javascript
        text/xml
        application/xml
        application/xml+rss
        text/yaml;
}

